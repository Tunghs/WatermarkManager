<UserControl x:Class="WatermarkManager.View.WatermarkManagerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ViewModel="clr-namespace:WatermarkManager.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="230" d:DesignWidth="800">

    <UserControl.DataContext>
        <ViewModel:WatermarkManagerViewModel/>
    </UserControl.DataContext>

    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderBrush="Black" BorderThickness="1">
            <Grid Margin="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="2"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Watermark White" FontSize="15" VerticalAlignment="Center" TextAlignment="Center"/>
                    <TextBox Grid.Column="1" IsReadOnly="True" VerticalContentAlignment="Center" FontSize="15"
                             Text="{Binding WatermarkWhitePath, Mode=TwoWay}" />
                    <Button Grid.Column="2" Content="..."
                    Command="{Binding ButtonClickCommand}" CommandParameter="LoadWatermarkWhite"/>
                </Grid>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Watermark Black" FontSize="15" VerticalAlignment="Center" TextAlignment="Center"/>
                    <TextBox Grid.Column="1" IsReadOnly="True" VerticalContentAlignment="Center" FontSize="15"
                             Text="{Binding WatermarkBlackPath, Mode=TwoWay}"/>
                    <Button Grid.Column="2" Content="..."
                    Command="{Binding ButtonClickCommand}" CommandParameter="LoadWatermarkBlack"/>
                </Grid>

                <Grid Grid.Row="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Directory Path" FontSize="15" VerticalAlignment="Center" TextAlignment="Center"/>
                    <TextBox Grid.Column="1" IsReadOnly="True" VerticalContentAlignment="Center" FontSize="15"
                             Text="{Binding FileDirePath, Mode=TwoWay}"/>
                    <Button Grid.Column="2" Content="..."
                    Command="{Binding ButtonClickCommand}" CommandParameter="Load"/>
                </Grid>
            </Grid>
        </Border>
                
        <Grid Grid.Row="2">
            <Button Height="40" Content="Run" FontSize="15"
                    Command="{Binding ButtonClickCommand}" CommandParameter="Run"/>
        </Grid>
    </Grid>
</UserControl>
