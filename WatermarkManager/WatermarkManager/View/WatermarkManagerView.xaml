<UserControl x:Class="WatermarkManager.View.WatermarkManagerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ViewModel="clr-namespace:WatermarkManager.ViewModel"
             mc:Ignorable="d"
             d:DesignHeight="580" d:DesignWidth="1020">

    <UserControl.DataContext>
        <ViewModel:WatermarkManagerViewModel/>
    </UserControl.DataContext>

    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Background="LightGray">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                
                <Button Grid.Column="1" Height="35" Content="Import Profile..." FontSize="15"/>

                <TextBlock Grid.Column="3" Text="wwwww./ww/ww/ww/" FontSize="20" VerticalAlignment="Center"/>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" Background="FloralWhite">

                </Grid>

                <Grid Grid.Column="2">

                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
